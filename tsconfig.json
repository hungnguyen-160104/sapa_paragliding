{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#app": ["./node_modules/nuxt/dist/app"],
      "#app/*": ["./node_modules/nuxt/dist/app/*"],
      "#imports": ["./.nuxt/imports"],
      "#build": ["./.nuxt"],
      "~": ["./app", "./"],
      "~/*": ["./app/*", "./*"],
      "@": ["./app", "./"],
      "@/*": ["./app/*", "./*"],
      "~~": ["./"],
      "~~/*": ["./*"],
      "@@": ["./"],
      "@@/*": ["./*"]
    }
  },
  "include": [
    ".nuxt/**/*.d.ts",
    "types/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.vue",
    "app/**/*.tsx",
    "server/**/*.ts",
    "server/**/*.tsx",
    "services/**/*.ts",
    "scripts/**/*.ts",
    "scripts/**/*.js",
    "nuxt.config.ts",
    "*.config.ts"
  ]
}
